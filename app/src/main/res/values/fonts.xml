<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyleMealList">
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">sans-serif</item>
        <item name="fontStyle">normal</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">21sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextStyleMealDetails">
        <item name="android:gravity">center_horizontal</item>
        <item name="fontFamily">sans-serif</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="TextStyleMealDetails.MealCategory">
        <item name="fontWeight">400</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey_text_70</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.7</item>
    </style>

    <style name="TextStyleMealDetails.MealName">
        <item name="fontWeight">500</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/black_text_meal_details</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextStyleMealDetails.MealTag">
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_grey_text</item>
        <item name="lineHeight">19.2sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="TextStyleMealDetails.MealIngredients">
        <item name="android:gravity">start</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_light_grey_text</item>
        <item name="lineHeight">17sp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

</resources>